@model PagedList.IPagedList<blackWood.Models.DonDatHang>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<style>
    .pagination {
        justify-content: center;
        margin-top: 20px;
    }

        .pagination li {
            width: 30px;
            height: 30px;
            border: 2px solid #333;
            border-radius: 50%;
            margin: 0 5px;
            position: relative;
        }

        .pagination .active {
            background-color: #333;
            color: #fff;
            border: 1px solid #fff;
        }

        .pagination li a {
            font-size: 15px;
            color: #333;
            position: absolute;
            padding: 10px;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
        }

    .btnSearch {
        background: #fff;
        border: none;
    }

    .button-right {
        float: right;
        padding: 10px;
    }

        .button-right a {
            text-decoration: none;
            color: white;
        }
</style>
<div id="content" class="bg-container">
    <header class="head">
        <div class="main-bar">
            <div class="row no-gutters">
                <div class="col-lg-6 col-sm-4">
                    <h4 class="nav_top_align">
                        <i class="far fa-file-alt"></i>
                        Thông tin đơn hàng
                    </h4>
                </div>
                <div class="col-lg-6 col-sm-8 col-12">
                    <ol class="breadcrumb float-right  nav_breadcrumb_top_align">
                        <li class="breadcrumb-item">
                            <a href="index1.html">
                                <i class="fa fa-home" data-pack="default" data-tags=""></i> Trang chủ
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#">Đơn hàng</a>
                        </li>
                        <li class="active breadcrumb-item">Thông tin đơn hàng</li>
                    </ol>
                </div>
            </div>
        </div>
    </header>
    <div class="outer">
        <div class="inner bg-container">
            <div class="card">

                <div class="card-body mt-1" id="user_body">
                    <div class="table-toolbar">
                       
                        <div class="btn-group float-right users_grid_tools">
                            <div class="tools"></div>
                        </div>
                    </div>
                    <div>
                        <div>
                            <table class="table  table-striped table-bordered table-hover dataTable no-footer" id="editable_table" role="grid">
                                <thead>
                                    <tr role="row">
                                        

                                        <th class="sorting wid-25" tabindex="0" rowspan="1" colspan="1">Tên khách hàng</th>
                                        <th class="sorting wid-25" tabindex="0" rowspan="1" colspan="1">Ngày bán</th>
                                        <th class="sorting wid-10" tabindex="0" rowspan="1" colspan="1">Nơi nhận</th>

                                        <th class="sorting wid-10" tabindex="0" rowspan="1" colspan="1">Trạng thái</th>
                                        <th class="sorting wid-10" tabindex="0" rowspan="1" colspan="1">Active</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr role="row" class="even">

                                            
                                            <td>@Html.DisplayFor(modelItem => item.NameKH)</td>
                                            <td>@String.Format("{0:MM/dd/yyyy}",@item.NgayBan)</td>
                                            <td>@Html.DisplayFor(modelItem => item.NoiNhan)</td>

                                            <td class="center">@Html.DisplayFor(modelItem => item.TrangThai)</td>
                                            <td>
                                                @Html.ActionLink(" ", "ChitietHD", new {@SoHD = item.SoHD }, new { @class = "fa fa-eye text-success" })&nbsp; &nbsp;
                                                @Html.ActionLink(" ", "SuaHD", new { @SoHD = item.SoHD }, new { @class = "fa fa-pencil text-warning" })&nbsp; &nbsp;
                                                

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="w3-center w3-padding-32">
                                <div class="w3-bar mr-5 ml-5">
                                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

    <div class="modal fade" id="search_modal" tabindex="-1" role="dialog" aria-hidden="true">
        <form>
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span class="float-right" aria-hidden="true">&times;</span>
                    </button>
                    <div class="input-group search_bar_small">
                        <input type="text" class="form-control" placeholder="Search..." name="search">
                        <span class="input-group-btn">
                            <button class="btn btn-secondary" type="submit"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



